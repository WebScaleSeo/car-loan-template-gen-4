  "pages": {
    "home": {
      "seo": {
        "title": "DriveRight Auto Loans — Affordable Car Financing",
        "metaDescription": "Find the perfect car loan for your budget. DriveRight offers competitive rates, flexible repayment terms, and a fast, easy application process."
      },
      "componentOrder": [
        "heroSection",
        "benefitsGrid",
        "howItWorksSteps",
        "loanTypesShowcase",
        "testimonialsCarousel",
        "whyChooseUs",
        "homeCta"
      ],
      "componentDefinitions": {
        "heroSection": {
          "purpose": "The main landing section that immediately communicates the value proposition and encourages visitors to start the loan process.",
          "dataSchema": {
            "type": "object",
            "properties": {
              "headline": {
                "type": "string",
                "description": "Bold primary headline about car loan services, max 10 words"
              },
              "subheadline": {
                "type": "string",
                "description": "Supporting description expanding on the headline, 1-2 sentences"
              },
              "ctaButtonText": {
                "type": "string",
                "description": "Primary CTA button label, e.g. Apply Now"
              },
              "ctaButtonUrl": {
                "type": "string",
                "description": "URL for CTA button — must be /contact"
              },
              "secondaryCtaText": {
                "type": "string",
                "description": "Secondary CTA button label, e.g. Learn More"
              },
              "secondaryCtaUrl": {
                "type": "string",
                "description": "URL for secondary CTA — must be /about"
              }
            },
            "required": [
              "headline",
              "subheadline",
              "ctaButtonText",
              "ctaButtonUrl",
              "secondaryCtaText",
              "secondaryCtaUrl"
            ]
          }
        },
        "benefitsGrid": {
          "purpose": "Displays key benefits of using DriveRight for car financing in an easy-to-scan grid layout.",
          "dataSchema": {
            "type": "object",
            "properties": {
              "sectionTitle": {
                "type": "string",
                "description": "Heading for the benefits section"
              },
              "sectionSubtitle": {
                "type": "string",
                "description": "Brief intro sentence for the benefits"
              },
              "benefits": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "iconName": {
                      "type": "string",
                      "description": "Identifier for a relevant icon, e.g. dollar-sign, clock, shield"
                    },
                    "title": {
                      "type": "string",
                      "description": "Short benefit title"
                    },
                    "description": {
                      "type": "string",
                      "description": "1-2 sentence explanation of the benefit"
                    }
                  },
                  "required": [
                    "iconName",
                    "title",
                    "description"
                  ]
                }
              }
            },
            "required": [
              "sectionTitle",
              "sectionSubtitle",
              "benefits"
            ]
          }
        },
        "howItWorksSteps": {
          "purpose": "A clear step-by-step visual guide showing how the car loan application process works, reducing friction and building confidence.",
          "dataSchema": {
            "type": "object",
            "properties": {
              "sectionTitle": {
                "type": "string",
                "description": "Heading for the steps section"
              },
              "sectionSubtitle": {
                "type": "string",
                "description": "Brief intro sentence"
              },
              "steps": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "stepNumber": {
                      "type": "string",
                      "description": "Step number like 01, 02, 03"
                    },
                    "title": {
                      "type": "string",
                      "description": "Short step title"
                    },
                    "description": {
                      "type": "string",
                      "description": "1-2 sentence description of this step"
                    }
                  },
                  "required": [
                    "stepNumber",
                    "title",
                    "description"
                  ]
                }
              }
            },
            "required": [
              "sectionTitle",
              "sectionSubtitle",
              "steps"
            ]
          }
        },
        "loanTypesShowcase": {
          "purpose": "Showcases the different types of car loans available, helping visitors quickly identify which option fits their needs.",
          "dataSchema": {
            "type": "object",
            "properties": {
              "sectionTitle": {
                "type": "string",
                "description": "Heading for loan types section"
              },
              "sectionSubtitle": {
                "type": "string",
                "description": "Brief intro to the loan options"
              },
              "loanTypes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "iconName": {
                      "type": "string",
                      "description": "Icon identifier for the loan type, e.g. car, refresh, piggy-bank"
                    },
                    "title": {
                      "type": "string",
                      "description": "Loan type name, e.g. New Car Loan"
                    },
                    "description": {
                      "type": "string",
                      "description": "2-3 sentence description of this loan type"
                    },
                    "ctaText": {
                      "type": "string",
                      "description": "CTA text for this card"
                    },
                    "ctaUrl": {
                      "type": "string",
                      "description": "URL for CTA — must be /contact"
                    }
                  },
                  "required": [
