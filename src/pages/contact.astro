---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import ContactHero from '../components/ContactHero';
import ContactForm from '../components/ContactForm';
import ContactExpectations from '../components/ContactExpectations';
import ContactFaqPreview from '../components/ContactFaqPreview';
import ContactCta from '../components/ContactCta';

import siteConfig from '../../siteConfig.json';
import cloudflareConfig from '../../cloudflareConfig.json';
const { global, pages } = siteConfig.site;
const pageData = pages.contact;
const seo = { title: pageData.seo.title, metaDescription: pageData.seo.metaDescription };
---

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": seo.title,
  "description": seo.metaDescription
})}></script>

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": `https://${cloudflareConfig.domain || 'placeholder.com'}/` },
    { "@type": "ListItem", "position": 2, "name": "Contact", "item": `https://${cloudflareConfig.domain || 'placeholder.com'}/contact` }
  ]
})}></script>

<Layout seo={seo} canonicalPath="/contact">
  <Header navigation={global.navigation} branding={global.branding} />
  <main>
    <ContactHero data={pageData.sections.contactHero} client:load />
    <ContactForm data={pageData.sections.contactForm} client:load />
    <ContactExpectations data={pageData.sections.contactExpectations} client:load />
    <ContactFaqPreview data={pageData.sections.contactFaqPreview} client:load />
    <ContactCta data={pageData.sections.contactCta} client:load />
  </main>
  <Footer footer={global.footer} />
</Layout>
